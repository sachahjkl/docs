---
import LeftSideBar from '../components/LeftSideBar.astro';
import DocsDropDown from '../components/DocsDropDown.astro';
import HomePageNav from '../components/HomePageNav.astro';
import Footer from '../components/Footer.astro';
import StayUpdated from '../components/StayUpdated.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
        <link rel="shortcut icon" href="/favicon.png">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			[x-cloak] {
				display: none !important;
			}
		</style>
        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-PZ2NL51HFG"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'G-PZ2NL51HFG');
        </script>
	</head>
	<body>
		<HomePageNav />
        <div class="flex-col lg:flex-row flex px-2 max-w-7xl mx-auto pt-24 pb-12 gap-10">
            <aside class="hidden min-h-0 lg:flex flex-col px-4 lg:w-60 items-start group">
                <div class="overflow-y-auto fixed pr-6 max-h-[calc(100%-100px)] custom-scrollbar">
                    <LeftSideBar currentPage={Astro.url.pathname} />
                </div>
            </aside>
            <div class="flex-1 px-8 max-w-3xl">
                <DocsDropDown currentPage={Astro.url.pathname} title={title} />
                <slot />
                <StayUpdated />
                <Footer />
            </div>
        </div>
	</body>
</html>


<style is:global>
[x-cloak] {
    display: none !important;
}
.custom-scrollbar::-webkit-scrollbar {
  width: .65em;
}
 
.custom-scrollbar::-webkit-scrollbar-thumb {
  @apply bg-gray-300 rounded hidden group-hover:block;
}

pre {
    @apply -mx-6 p-6 mb-12 rounded-lg bg-gray-900 !important;
}

pre code {
    font-weight: 500;
    @apply bg-gray-900 px-0 border-none text-base leading-[1.9em] !important;
}

code {
    @apply bg-gray-100 border border-gray-400 text-purple-800 px-1 py-0.5 rounded text-base leading-[1.9em] font-medium;
}

.markdown h1 {
    @apply text-4xl sm:text-5xl mb-8 font-bold text-gray-800;
}
.markdown p + ul {
    @apply -mt-4;
}

.markdown p {
    @apply text-base mb-6 leading-[1.9em] text-gray-800;
}

.markdown ul {
    @apply list-disc list-inside mb-6 ml-4;
}

.markdown li {
    @apply leading-[1.9em];
}

.markdown blockquote {
    @apply -mx-6 p-6 mt-10 mb-12 bg-blue-50 border-l-4 border-blue-600 !important;
}
.markdown blockquote pre {
    @apply mx-0 !important;
}

.markdown blockquote > p:last-of-type {
    @apply mb-0 !important;
}

.markdown h2 {
    @apply text-4xl mt-20 mb-8 font-medium text-gray-800;
}

.markdown h3 {
    @apply text-2xl mt-12 mb-4 font-bold text-gray-800;
}
.markdown h4 {
    @apply text-lg mb-4 font-bold text-gray-800;
}

.markdown img {
    @apply mb-6 w-full mx-auto rounded-lg;
}

.markdown a {
    @apply font-bold text-lg text-purple-700 border-b-2 border-purple-700;
}
</style>