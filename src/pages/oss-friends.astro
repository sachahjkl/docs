---
import Layout from "../layouts/Plain.astro";
const response = await fetch('https://formbricks.com/api/oss-friends');
const data = await response.json();
const projects = data.data;
---

<Layout title="Open Source Friends">
  <main class="text-center flex flex-col justify-center pt-16">
    <div class="px-4 py-20 text-center sm:px-6 lg:px-8 lg:py-28">
      <h1
        class="text-3xl font-bold tracking-tight text-slate-800 dark:text-slate-200 sm:text-4xl md:text-5xl"
      >
        <span class="xl:inline">Our</span>
        <span class="text-yellow-400 xl:inline">Open-source</span>
        <span class="inline">Friends</span>
      </h1><p
        class="mx-auto mt-3 max-w-md text-base text-slate-500 dark:text-slate-300 sm:text-lg md:mt-5 md:max-w-2xl md:text-xl"
      >
      </p><div class="mx-auto mt-5 max-w-md sm:flex sm:justify-center md:mt-8">
      </div>
    </div>
    <div
      class="m-4 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto"
    >
    {projects.map((item) => (
      <div class="overflow-hidden rounded bg-slate-100 p-6 shadow-md">
        <a href={item.href} class="mb-2 text-xl font-bold"
          >{item.name}</a
        >
        <p class="mt-4 text-sm text-gray-700">
          {item.description}
        </p>
        <div class="mt-4">
          <a
            target="_blank"
            href={item.href}
            class="px-3 py-2 text-white bg-black rounded"
          >
            Learn more
          </a>
        </div>
      </div>
    ))}
    </div>
  </main>
</Layout>
